<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".userProfileFragment">

    <TextView
        android:id="@+id/profileTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:text="Profile"
        android:textColor="#EF6C00"
        android:textSize="40dp" />

    <LinearLayout
        android:id="@+id/useInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:textStyle="italic"
            android:text="Name: "
            android:textSize="28dp" />

        <TextView
            android:id="@+id/profileEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:textStyle="italic"
            android:text="Mail: "
            android:textSize="28dp" />

        <TextView
            android:id="@+id/profilePhoneNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:textStyle="italic"
            android:text="Phone Number:"
            android:textSize="28dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/myListRbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="My List"
                android:textSize="20dp"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/myPostRbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="My Posts"
                android:textSize="20dp"
                tools:ignore="TouchTargetSizeCheck" />
        </RadioGroup>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:layout_margin="5dp"
        android:background="@drawable/edit_text_border">

        <TextView
            android:id="@+id/contentListOrPostList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="test\ntest\ntest\ntest\ntest\ntest\XXXXXXXXXXXXXXXXXXntest\ntest\ntest\ntest\ntest\ntest\ntest\ntest\ntest\ntest\ntest\nXXXXXXXXXXXXXXXXX test\ntest\nXXXXXXXXXXXXXXXX\ntest\ntest\ntest\ntest\ntest"
            android:textSize="20dp" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/profileFooter"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/profleFooterHomeBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Home"
            android:textColor="@color/white"
            android:drawableTop="@drawable/icon_home"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_style"
            android:textSize="17sp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:focusable="true"
            android:textAllCaps="false"

            />

        <Button
            android:id="@+id/profileFooterProfileBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Profile"
            android:textColor="@color/black"
            android:drawableTop="@drawable/icon_profile_in_page"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_style"
            android:textSize="17sp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:focusable="true"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/profileFooterSocialBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Social"
            android:textColor="@color/white"
            android:drawableTop="@drawable/icon_social"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_style"
            android:textSize="17sp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:focusable="true"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/profileFooterContentBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Content"
            android:textColor="@color/white"
            android:drawableTop="@drawable/icon_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_style"
            android:textSize="15sp"
            android:paddingTop="1dp"
            android:paddingBottom="20dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:focusable="true"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>